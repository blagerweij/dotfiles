[user]
	name = "Barry Lagerweij"
	email = b.lagerweij@carepay.com
        jira-api-token = ***REMOVED***
[push]
	default = simple
[core]
	filemode = false
	autocrlf = input
[color]
	ui = auto
[branch]
	autosetupmerge = true
[alias]
        co = checkout
        cob = checkout -b
        del = branch -D
        s = status
        br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
        undo = reset HEAD~1 --mixed
	ahead = log --stat --oneline @{u}..
        up = pull --rebase --prune --autostash
        pu = ![[ $(git config branch.$(git symbolic-ref --short HEAD).merge) = '' ]] && git push -u origin $(git symbolic-ref --short HEAD) || git push
